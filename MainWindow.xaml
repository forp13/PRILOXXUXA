<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame Name="mainFrame"/>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="454,35,0,0" VerticalAlignment="Top" FontSize="30" RenderTransformOrigin="0.282,0.25"/>
        <Label Content="Почта" HorizontalAlignment="Left" Margin="512,160,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="512,217,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Восстановить пароль" HorizontalAlignment="Left" Margin="532,287,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.297,-0.096"/>
        <TextBox HorizontalAlignment="Left" Margin="510,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" TextChanged="TextBox_TextChanged" RenderTransformOrigin="0.5,0.5" FontSize="18" Background="{x:Null}" BorderBrush="#FF616161">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.117"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Margin="512,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Background="{x:Null}" Cursor="AppStarting" FontSize="18" Foreground="#FFA08E8E" BorderBrush="Black"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="512,326,0,0" VerticalAlignment="Top" Height="30" Width="236" Background="#f96060" Click="Button_Click_1" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">

                    <Setter Property="CornerRadius" Value="20,20,5,5"/>

                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="512,361,0,0" VerticalAlignment="Top" Height="30" Width="236" Background="#F96060" Click="Button_Click_2" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">

                    <Setter Property="CornerRadius" Value="5,5,20,20"/>

                </Style>
            </Button.Resources>
        </Button>


    </Grid>
</Window>
